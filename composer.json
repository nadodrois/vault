{
	"name": "x-share/vault",
	"description": "Enterprise password vault.",
	"keywords": ["password", "laravel", "share", "vault"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
        "phpspec/phpspec": "2.0.*@dev",
        "phpunit/phpunit": "4.1.*@dev"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
        "psr-0": {
            "": "app"
        },
        "psr-4": {
            "Vault\\": "app/Vault"
        }
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist",
        "bin-dir": "bin"
    },
	"minimum-stability": "stable"
}
